<?xml version="1.0" encoding="UTF-8"?>
<Defs>

    <HediffDef>
        <defName>WWE_Transitioning</defName>
        <label>Transitioning</label>
        <description>Contact to genderfluid rain or HRT made this pawn transition to a different sex.</description>
        <defaultLabelColor>(0.8, 0.8, 0.35)</defaultLabelColor>
        <tendable>false</tendable>
        <stages>
            <li>
                <label>initial</label>
                <becomeVisible>false</becomeVisible>
            </li>
            <li>
                <label>initial</label>
                <minSeverity>0.04</minSeverity>
            </li>
            <li>
                <label>minor</label>
                <minSeverity>0.2</minSeverity>
            </li>
            <li>
                <label>serious</label>
                <minSeverity>0.35</minSeverity>
            </li>
            <li>
                <label>extreme</label>
                <minSeverity>0.62</minSeverity>
            </li>
        </stages>
    </HediffDef>


    <HediffDef>
        <defName>WWE_Transitioned</defName>
        <label>Transitioned</label>
        <defaultLabelColor>(0.8, 0.0, 0.8)</defaultLabelColor>
        <description>A pawn being transitioned makes them unhappy. Except for transgenders, they get extatic about it.</description>
        <chronic>true</chronic>
        <allowMothballIfLowPriorityWorldPawn>true</allowMothballIfLowPriorityWorldPawn>
        <tendable>false</tendable>
        <isBad>false</isBad>
    </HediffDef>
</Defs>